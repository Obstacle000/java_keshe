<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>

<BorderPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.teach.javafx.controller.LeavePanelController">

    <center>
        <TableView fx:id="dataTableView" prefHeight="550.0" prefWidth="987.0">
            <columns>
                <TableColumn fx:id="leaveIdColumn" prefWidth="80.0" text="假条ID" />
                <TableColumn fx:id="studentNameColumn" prefWidth="150.0" text="学生姓名" />
                <TableColumn fx:id="numColumn" prefWidth="200.0" text="学号" />
                <TableColumn fx:id="teacherNameColumn" prefWidth="100.0" text="申请教师" />
                <TableColumn fx:id="startTimeColumn" prefWidth="150.0" text="开始时间" />
                <TableColumn fx:id="endTimeColumn" prefWidth="150.0" text="结束时间" />
                <TableColumn fx:id="applyTimeColumn" prefWidth="80.0" text="申请时间" />
                <TableColumn fx:id="statusColumn" prefWidth="100.0" text="状态" />
            <TableColumn fx:id="operateColumn" prefWidth="75.0" text="操作" />
            </columns>
        </TableView>
    </center>

    <top>
        <HBox prefHeight="40.0" prefWidth="900.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <FlowPane prefHeight="40.0" prefWidth="350.0">
               <children>
                        <Button fx:id="applyButton" onAction="#onApplyButtonClicked" prefHeight="30.0" prefWidth="70.0" text="申请请假" />
               </children></FlowPane>
                <FlowPane prefHeight="40.0" prefWidth="350.0" />
                <FlowPane hgap="10.0" prefHeight="40.0" prefWidth="200.0" />
            </children>
        </HBox>
    </top>

</BorderPane>
